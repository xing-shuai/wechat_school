.header {
  display: flex;
  width: 73%;
  margin: 0 auto;
  margin-top: 40px;
}

.form_panel {
  padding: 9px;
  display: block;
  height: 160px;
  width: 80%;
  margin: 0 auto;
  margin-top: 35px;
  border-radius: 7px;
}

.bind_button {
  margin-top: 20px;
