.class_bg {
  width: 100%;
  height: 220px;
  position: relative;
}

.class_member {
  display: flex;
  padding: 8px;
}

.class_name {
  color: white;
  position: absolute;
  bottom: 0px;
  padding: 10px;
  font-size: 25px;
}

.all_menu {
  height: 20px;
  width: 20px;
  margin-top: 1px;
}

.class_head_group {
  display: flex;
  flex-wrap: wrap;
}

.class_head_group image {
  margin: 5px 5px -5px 5px;
}

.menu {
  height: 50px;
  display: flex;
  margin: 0px auto;
  border-bottom: 1px solid #edece8;
  padding-top: 5px;
  padding-left: 10px;
  padding-right: 11px;
}

.menu_icon {
  height: 25px;
  width: 25px;
  margin: 12px 10px 12px 5px;
}

.menu_open {
  height: 20px;
  width: 20px;
  margin: 14px 0px 12px 20px;
}

.menu_name {
  padding-top: 12px;
  color: gray;
  flex-grow: 1;
}

.class_member_name {
  text-align: center;
  font-size: 13px;
  color: gray;
}
