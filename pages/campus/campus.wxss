.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #777;
}

.on {
  color: #449d44;
  border-bottom: 5rpx solid #449d44;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.list_view {
  border-bottom: 1px solid #edece8;
  width: 98%;
  margin: 0 auto;
}

.list_time {
  font-size: 12px;
  color: gray;
  text-align: right;
  padding-right: 19px;
  padding-bottom: 10px;
}

.list_title {
  color: #888;
  font-size: 15px;
  padding: 10px 10px 10px 12px;
}
