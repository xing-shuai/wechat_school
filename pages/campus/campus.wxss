.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 20%;
  color: #777;
}

.on {
  color: #449d44;
  border-bottom: 5rpx solid #449d44;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.list_view {
  border-bottom: 1px solid #edece8;
  width: 98%;
  margin: 0 auto;
}

.list_time {
  font-size: 12px;
  color: gray;
  text-align: right;
  padding-right: 19px;
  padding-bottom: 10px;
}

.list_title {
  color: #888;
  font-size: 15px;
  padding: 10px 10px 10px 12px;
}

.content_list image {
  width: 20px;
  height: 20px;
  margin-right: 9px;
  margin-top: 3px;
}

.content_list view {
  width: 80%;
}

.title {
  background-color: #f3f3f3;
  padding: 10px 25px;
  font-size: 15px;
}

.content {
  background-color: white;
}

.content_list {
  display: flex;
  padding: 15px 0px 15px 15px;
  width: 83%;
  border-bottom: 1px solid #f0f0f0;
  margin: 0 auto;
}
