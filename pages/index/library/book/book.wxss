.book_img {
  margin: 2px 5px;
}

.book_img image {
  width: 114px;
  height: 165px;
  display: block;
  margin: 0 auto;
}

.info {
  display: flex;
  font-size: 12px;
  margin-top: 7px;
}

.info_title {
  font-weight: bold;
  width: 149px;
}

.info_content {
  width: 231px;
}

.book_sum {
  width: 233px;
}

.detail {
  font-size: 12px;
  display: flex;
  margin: 7px 5px;
}

.detail_title {
  width: 26%;
  font-weight: bold;
  text-align: right;
  padding-right: 10px;
}

.detail_content {
  width: 73%;
}

.table_header {
  font-weight: bold;
  display: flex;
  text-align: center;
  width: 98%;
  margin: 0 auto;
  background-color: #f0f0f0;
}

.table {
  display: flex;
  text-align: center;
  width: 98%;
  margin: 0 auto;
  background-color: #f6f6f6;
  font-size: 10px;
}
