@import "../../lib/weui.wxss";

page {
  background-color: #edece8;
}

.slide-image {
  width: inherit;
}

.flex-wrp {
  display: flex;
}

.flex-item {
  width: 25%;
  height: 86px;
  border: 1px solid #eff2f5;
}

.menu_icon {
  height: 65%;
  width: 65%;
  margin: 0px auto;
  margin-top: 12px;
}

.menu_icon image {
  width: 65%;
  height: 65%;
  margin: 4px auto;
  display: block;
}

.menu_name {
  font-size: 12px;
  text-align: center;
  color: #6d6a6a;
  margin-top: -8px;
}

.logo {
  height: 60px;
  background-color: white;
  display: flex;
}

.header {
  display: flex;
  flex-grow: 0.9;
  margin-left: 7px;
  align-items: center;
}

.weather {
  width: 27%;
  display: flex;
}

.weather image {
  width: 27px;
  height: 27px;
  margin-top: 15px;
}

.weather view {
  font-size: 13px;
  padding: 21px 10px 0 0;
  color: gray;
}

.flex-item_hover {
  background-color: #f6f6f6;
}

.badge_label {
  display: block;
  background-color: red;
  border-radius: 12px;
  width: 10px;
  text-align: center;
  height: 10px;
  color: white;
  font-size: 14px;
  position: fixed;
  margin-top: 10px;
  margin-left: 120rpx;
}
