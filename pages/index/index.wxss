@import "../../lib/weui.wxss";

page {
  background-color: #edece8;
}

.slide-image {
  width: inherit;
}

.flex-wrp {
  display: flex;
}

.flex-item {
  width: 25%;
  height: 86px;
  border: 1px solid #eff2f5;
}

.menu_icon {
  height: 65%;
  width: 65%;
  margin: 0px auto;
  margin-top: 12px;
}

.menu_icon image {
  width: 70%;
  height: 70%;
  margin: 4px auto;
  display: block;
}

.menu_name {
  font-size: 12px;
  text-align: center;
  color: #6d6a6a;
  margin-top: -8px;
}

.logo {
  height: 60px;
  background-color: white;
  padding-top: 5px;
  display: flex;
}

.header {
  display: flex;
  width: 63%;
  margin-left: 7px;
}

.weather {
  width: 37%;
  display: flex;
}

.weather image {
  width: 30px;
  height: 30px;
  margin-top: 12px;
}

.weather view {
  font-size: 15px;
  padding: 16px 10px 0 0;
}

.flex-item_hover {
  background-color: #f6f6f6;
}

.badge_label {
  display: block;
  background-color: red;
  border-radius: 12px;
  width: 20px;
  text-align: center;
  height: 20px;
  color: white;
  font-size: 14px;
  position: fixed;
  margin-top: -61px;
  margin-left: 51px;
}
