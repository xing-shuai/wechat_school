.card {
  margin: 10px;
  border-radius: 5px;
  height: 110px;
}

.course_name {
  font-size: 19px;
  color: white;
  padding: 10px;
}

.course_detail {
  display: flex;
  color: white;
  padding: 0px 0 10px 10px;
  font-size: 13px;
}

.card_button {
  display: flex;
  color: white;
  align-items: center;
}

.kaoqin {
  margin-right: 7px;
  border-radius: 7px;
  padding: 2px 6px;
  font-size: 14px;
  height: 20px;
}

.kaoqin_count {
  flex-grow: 1;
  font-size: 13px;
  padding: 5px 10px;
}
