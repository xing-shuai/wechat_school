.stu_list {
  display: flex;
  align-items: center;
  padding-top: 10px;
  border-bottom: 1px solid #edece8;
  padding-bottom: 10px;
}

.stu_image {
  width: 50px;
  height: 50px;
  display: block;
  margin: 0 40rpx;
  border-radius: 25px;
}

.stu_info {
  flex-grow: 0.9;
  font-size: 14px;
}

.stu_info label {
  margin-right: 10px;
}

.pingding {
  width: 15%;
  text-align: center;
  font-size: 15px;
  margin-left: 20rpx;
  border-left: 1px solid #edece8;
}

.pingding_hover {
  background-color: #f0f0f0;
}

.menu_open {
  height: 20px;
  width: 20px;
  padding-right: 8px;
}

.final_grade_input {
  font-size: 12px;
  width: 55px;
  border: 1px solid #80c8e5;
  border-radius: 20px;
  text-align: center;
  margin-right: 7px;
}

.float_button {
  width: 60px;
  background-color: #f00;
  border-radius: 32px;
  height: 60px;
  text-align: center;
  line-height: 68px;
  color: white;
  position: fixed;
  right: 26px;
  box-shadow: 5px 6px 20px 0px #dcdada;
}
